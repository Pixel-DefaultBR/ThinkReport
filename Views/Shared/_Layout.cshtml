<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] â€” ThinkIT SOC</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
          crossorigin="anonymous" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"
          rel="stylesheet" />

    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;600&display=swap"
          rel="stylesheet" />

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body class="text-light">

    <div id="particles-js" aria-hidden="true"></div>

    <nav class="navbar navbar-dark navbar-custom border-bottom border-secondary">
        <div class="container-fluid px-4">
            <span class="navbar-brand d-flex align-items-center gap-3">
                <div class="nav-brand-text">
                    <div class="nav-brand-name">
                        <span class="brand-think">>Think</span><span class="brand-it">IT</span>
                    </div>
                </div>
            </span>
        </div>
    </nav>

    <main class="container-xl py-4">
        @RenderBody()
    </main>

    <footer class="footer-custom mt-4 py-3 text-center small">
        ThinkIT Security Operations Center &mdash; Uso Interno
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>

    <script src="https://cdn.jsdelivr.net/npm/particles.js@2.0.0/particles.min.js"></script>
    <script>
    particlesJS('particles-js', {
        particles: {
            number: {
                value: 160,
                density: { enable: true, value_area: 800 }
            },
            color: {
                value: ['#D9BBF9', '#7871AA', '#AA9FB1', '#4E5283']
            },
            shape: { type: 'circle' },
            opacity: {
                value: 0.4,
                random: true,
                anim: { enable: true, speed: 0.4, opacity_min: 0.08, sync: false }
            },
            size: {
                value: 2,
                random: true,
                anim: { enable: false }
            },
            line_linked: {
                enable: true,
                distance: 140,
                color: '#7871AA',
                opacity: 0.12,
                width: 1
            },
            move: {
                enable: true,
                speed: 0.5,
                direction: 'none',
                random: true,
                straight: false,
                out_mode: 'out',
                bounce: false
            }
        },
        interactivity: {
            detect_on: 'canvas',
            events: {
                onhover: { enable: true, mode: 'grab' },
                onclick: { enable: false },
                resize: true
            },
            modes: {
                grab: { distance: 110, line_linked: { opacity: 0.28 } }
            }
        },
        retina_detect: true
    });
    </script>

    <script src="https://cdn.jsdelivr.net/npm/dompurify@3.2.4/dist/purify.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
