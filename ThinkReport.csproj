<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <RootNamespace>ThinkReport</RootNamespace>
    <AssemblyName>ThinkReport</AssemblyName>
  </PropertyGroup>

  <ItemGroup>
    <!-- SDK oficial Microsoft para manipulação de .docx (Open XML) -->
    <PackageReference Include="DocumentFormat.OpenXml" Version="3.3.0" />
    <!-- Leitura de dimensões reais de imagens (Windows-only) -->
    <PackageReference Include="System.Drawing.Common" Version="8.0.0" />
    <!-- Geração de PDF (licença Community — gratuita para uso interno) -->
    <PackageReference Include="QuestPDF" Version="2024.10.4" />
  </ItemGroup>

</Project>
